set $ws9  "9:Notes"
set $ws10 "11:Code"
set $ws11 "12:Term"
set $ws12 "13:Web"
set $ws13 "14:Multi"
set $ws14 "15:Music"
set $ws15 "16:Files"
set $ws16 "17:Read"
set $ws17 "18:Write"
set $ws18 "19:Notes"
set $ws19 "20:Server"
set $ws20 "21:Downloads"
set $ws21 "22:Misc"


