################################################################################
# Layout
#######################################
# set default desktop layout (default is tiling), <stacking|tabbed>
workspace_layout    default

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s    layout stacking
bindsym $mod+w    layout tabbed
bindsym $mod+e    layout toggle split

#start in opposite orientation from your monitor
default_orientation    vertical

#toggles split at each new window (Fibonnaci layout)
for_window [class=".*"]    split toggle

# toggle the way a split happens in the focused window
bindsym $mod+t    split toggle

# toggle tiling / floating
bindsym $mod+Shift+space    floating toggle

# change focus between tiling / floating windows
bindsym $mod+space    focus mode_toggle

# Use Mouse+$mod to drag floating windows
floating_modifier    $mod

# toggle sticky
bindsym $mod+Shift+s    sticky toggle

# focus the parent container
bindsym $mod+a    focus parent

################################################################################
# Scratchpad
#######################################
# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus    move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
# Monitor
bindsym $mod+Mod1+KP_Add         scratchpad show, resize set 1900 1000, move position center

# Laptop
bindsym $mod+Mod1+KP_Subtract    scratchpad show, resize set 1300 700, move position center

################################################################################
# Borders
#######################################
# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 2
new_float normal
default_floating_border pixel 2

# Hide borders
hide_edge_borders smart

# change borders
bindsym $mod+b    border none
bindsym $mod+y    border pixel 2
bindsym $mod+n    border normal

################################################################################
# dmenu
#######################################
bindsym $mod+d         exec --no-startup-id ~/Dropbox/.custom/dmenu/software.sh
bindsym $mod+Mod1+c    exec --no-startup-id ~/Dropbox/.custom/dmenu/cheatsheets.sh
bindsym $mod+Mod1+d    exec --no-startup-id ~/Dropbox/.custom/dmenu/documents.sh
bindsym $mod+Mod1+f    exec --no-startup-id ~/Dropbox/.custom/dmenu/filepaths.sh
bindsym $mod+Mod1+s    exec --no-startup-id ~/Dropbox/.custom/dmenu/scripts.sh
bindsym $mod+Mod1+q    exec --no-startup-id ~/Dropbox/.custom/dmenu/quotes.sh
bindsym $mod+Mod1+u    exec --no-startup-id ~/Dropbox/.custom/dmenu/university.sh
bindsym $mod+Mod1+w    exec --no-startup-id ~/Dropbox/.custom/dmenu/work.sh

################################################################################
# sound
#######################################
exec --no-startup-id volumeicon
bindsym $mod+Ctrl+m    exec st -e 'alsamixer'

# Control volume
bindsym XF86AudioRaiseVolume        exec "amixer -q sset Master,0 5%+ unmute && \
    notify-send -t 800 `amixer sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }'`"
bindsym XF86AudioLowerVolume        exec "amixer -q sset Master,0 5%- unmute && \
    notify-send -t 800 `amixer sget Master | grep 'Left:' | awk -F'[][]' '{ print $2 }'`"
bindsym XF86AudioMute               exec "amixer -q sset Master,0 toggle && \
    notify-send -t 800 `amixer sget Master | grep 'Left:' | awk -F'[][]' '{ print $4 }'`"
bindsym $mod+Home     exec "notify-send -t 800 `amixer \
    | grep 'Left:' | awk -F'[][]' '{ print $2 }' | head -1`"

# Take care of ears by default
exec_always --no-startup-id amixer set Master 50%

# Set default output level for microphone
exec_always --no-startup-id amixer set Capture 70%

################################################################################
# brightness
#######################################
# Control brightness more precisely through software `brightnessctl`
bindsym $mod+KP_Add         exec "brightnessctl s 1%+"
bindsym $mod+KP_Subtract    exec "brightnessctl s 1%-"

## Max value is 4882 in this case, so get current value and convert it to percentage
bindsym $mod+KP_Enter    exec "notify-send -t 800 `bc <<< \`brightnessctl g\`/48.82`%"

################################################################################
# applications
#######################################
# Start
bindsym $mod+BackSpace              exec xfce4-taskmanager
bindsym $mod+Mod1+Home              exec flameshot
bindsym $mod+Print --release        exec --no-startup-id xfce4-screenshooter --window --save ~/Pictures/screenshots/
bindsym $mod+Shift+d --release      exec "killall dunst; exec notify-send 'restart dunst'"
bindsym $mod+Shift+g                exec gimp
bindsym $mod+Shift+i                exec inkscape
bindsym $mod+Shift+t                exec thunar
bindsym $mod+Shift+v                exec st -e vifm
bindsym $mod+Shift+x --release      exec --no-startup-id xkill
bindsym Print --release             exec --no-startup-id xfce4-screenshooter --region --save ~/Pictures/screenshots/
bindsym XF86Calculator              exec galculator
bindsym XF86HomePage                exec brave-browser
bindsym XF86Mail                    exec st -e calcurse

# Open applications on specific workspaces
assign [class="(?i)brave-browser"]      $ws3
assign [class="(?i)code"]               $ws1
assign [class="(?i)firefox"]            $ws3
assign [class="(?i)google-chrome"]      $ws3
assign [class="Audacity"]               $ws4
assign [class="Clementine"]             $ws5
assign [class="Gimp"]                   $ws4
assign [class="Inkscape"]               $ws4
assign [class="Transmission"]           $ws9
assign [class="keepassxc"]              $ws9
assign [class="vlc"]                    $ws4
assign [title="glances"]                $ws6

# Open specific applications in floating mode
for_window [class="(?i)virtualbox"]           floating enable border pixel 2
for_window [class="GParted"]                  floating enable border pixel 2
for_window [class="Lightdm-settings"]         floating enable pixel 2
for_window [class="Lxappearance"]             floating enable sticky enable border pixel 2
for_window [class="Nitrogen"]                 floating enable sticky enable border pixel 2
for_window [title="File Transfer*"]           floating enable border pixel 2
for_window [title="alsamixer"]                floating enable border pixel 2

# Autostart applications
exec --no-startup-id                          brightnessctl s 90%
exec --no-startup-id                          nitrogen --restore
exec --no-startup-id                          nm-applet
exec --no-startup-id                          pasystray
exec --no-startup-id                          copyq
exec_always --no-startup-id                   unclutter --timeout 5 --jitter 20 --ignore-scrolling &
exec_always --no-startup-id                   xmodmap ~/.Xmodmap

################################################################################
# keyboard / mouse
#######################################
# Set compose key to Right Ctrl
exec_always --no-startup-id                   setxkbmap -option "compose:rctrl"

# Delay, interval
exec_always --no-startup-id                   xset r rate 250 60

################################################################################
# colors
#######################################
# Start i3bar to display a workspace bar (plus the system information i3status if available)
bar {
    i3bar_command i3bar
    status_command i3status
    position top

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
    tray_output primary
    bindsym button4 nop
    bindsym button5 nop

    colors {
        background #000000
        statusline #FDFFFC
        separator  #64A312
#                          border    backgr.    text
        focused_workspace  #FFFFFF   #1264A3    #FFFFFF
        active_workspace   #64A312   #1264A3    #FFFFFF
        inactive_workspace #222D32   #64A312    #000000
        binding_mode       #FFFFFF   #1264A3    #FFFFFF
        urgent_workspace   #FFFFFF   #CD2553    #FDFFFC
    }
}

# Theme colors
# class                   border  backgr. text    indic.  child_border
  client.focused          #F9FAF9 #1264A3 #FFFFFF #FDFFFC #00FF00
  client.focused_inactive #222D32 #020D14 #CFD8DC #454948
  client.unfocused        #061229 #061229 #CFD8DC #454948
  client.urgent           #FFFFFF #CD2553 #FDFFFC #FDFFFC
  client.placeholder      #F9FAF9 #061229 #FFFFFF #061229
  client.background       #061229
