# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#64A312"
        color_bad = "#97BAC6"
        color_degraded = "#CD2553"
}

order += "cpu_usage"
order += "load"
order += "disk /"
order += "memory"
# order += "disk /home"
order += "wireless _first_"
order += "battery all"
# order += "load"
order += "volume master"
order += "tztime local"
# order += "ipv6"

cpu_usage {
        format = "💻 %usage "
}

load {
        format = "🏋 %1min · %5min · %15min "
        max_threshold = 2.0
}

memory {
        format = " 🐏 %used (F · %available) "
        threshold_degraded = "15%"
        threshold_critical = "5%"
        format_degraded = " Memory LOW: %free "
}

disk "/" {
        # format = " hdd %avail "
        format = " 💾 %avail "
}

wireless _first_ {
# if you use %speed, i3status requires root privileges
        format_up = "📶 %essid [%quality] %ip"
        format_down = "W: down"
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = "🔋%percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "🔋"
        status_chr = "⚡"
        # status_bat = "bat"
        # status_bat = "☉"
        status_bat = "🔋"
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

volume master {
    format = "🔊 %volume"
    format_muted = "🔇"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    color_degraded = "#FFFFFF"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = "📅 %a %d %b %Y %I:%M %p %Z"
}
