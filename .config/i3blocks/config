[BANDWIDTH]
command=~/.config/i3blocks/bandwidth2/bandwidth2
interval=persist
markup=pango

[WIFI]
command=~/.config/i3blocks/wifi/wifi
interval=30

[DISK]
command=df -h / | awk '/\//{ printf(" 💾 %4s/%s \n", $4, $2) }'
interval=2
color=#C9E3DB

[BATTERY]
command=~/.config/i3blocks/battery/battery_info.sh
interval=3

[CPU]
full_text= CPU:  0.00% @ +00.0°C 
command=~/.config/i3blocks/cpu/cpu_info.sh
interval=repeat
color=#00B4EB

[MEM]
command=free -h | awk '/Mem:/ { printf(" 🐏 %5s/%s \n", $3, $2) }'
interval=1
color=#FEC925

[SOUND_BURST]
command=~/.config/i3blocks/sound/sound_burst.sh
interval=once

[SOUND]
full_text= 🔇:  0%
command=~/.config/i3blocks/sound/sound_info.sh
interval=0
signal=1

[MIC]
command=~/.config/i3blocks/microphone/microphone
interval=10
signal=10

[TIME_DATE]
command=date +" %a, %d %b - %H:%M"
interval=1
